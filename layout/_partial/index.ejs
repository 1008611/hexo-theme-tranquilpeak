<%
    var thumbNailImgClass = '';

    if (theme.thumbnail_image) {
        thumbNailImgClass = 'post--thumbnailimg';
    }
%>
<div class="posts">
    <% page.posts.each(function(post) { %>
        <article class="post-wrap <%= thumbNailImgClass %>">
            <div class="post">
                <% if (post.link) { %>
                    <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url">
                        <h1 class="post-title"><%= post.title %></h1>
                    </a>
                <% } else { %>
                    <a href="<%= post.permalink %>">
                        <h1 class="post-title"><%= post.title %></h1>
                    </a>
                <% } %>
                <div class="post-info text-xsmall text-uppercase">
                    <% if (post.date.isAfter(moment().subtract(7, 'days'))) { %>
                        <%= post.date.fromNow() %>
                    <% } else { %>
                        <%= post.date.format('MMM DD, YYYY') %>
                    <% } %>
                    <% if (post.categories.length) { %>
                        <span>IN </span>
                        <%- partial('post/category', {categories: post.categories, style: 'link'})%>
                    <% } %>
                </div>
                <div class="post-snippet text-large">
                    <% if (post.excerpt) { %>
                        <%- post.excerpt %>
                    <% } else { %>
                        <%- post.content.replace(/<(?:.|\n)*?>/gm, '').substr(0, 200) %>
                        <p></p>
                    <% } %>
                    <% if (post.link) { %>
                        <p>
                            <a href="<%- url_for(post.link) %>" target="new" class="link text-uppercase text-xsmall"><%- theme.go_to_message %> </a>
                        </p>
                    <% } else { %>
                        <% if (theme.read_more_message) { %>
                            <p>
                                <a href="<%= post.permalink %>" class="link text-uppercase text-xsmall"><%- theme.read_more_message %></a>
                                <span class="post-readingtime text-xsmall text-uppercase"><%= ' - ' + post.readingtime + ' min read' %></span>
                            </p>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <% var thumbNailImg = null; %>
            <% if ((post.photos.length) && (theme.thumbnail_image)) { %>
                <% thumbNailImg = post.permalink + post.photos[0]; %>
                <div class="post-thumbnailimg">
                    <img alt="" src="<%= thumbNailImg %>"/>
                </div>
            <% } %>
            <div class="post-separator"></div>
        </article>
    <% }) %>
    <%- partial('pagination', {type: 'page'}) %>
</div>