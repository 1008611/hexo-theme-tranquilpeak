
<div class="pagination-bar">
    <ul class="pagination">
        <% if (page.prev) { %>
            <li class="pagination-prev">
                <a class="btn btn--default btn--small" href="<%- url_for(page.prev_link) %>">
                    <i class="fa fa-angle-left text-base"></i>
                    <span>NEWER POSTS</span>
                </a>
            </li>
        <% } %>
        <% if (page.next) { %>
            <li class="pagination-next">
                <a class="btn btn--default btn--small" href="<%- url_for(page.next_link) %>">
                    <span>OLDER POSTS</span>
                    <i class="fa fa-angle-right text-base"></i>
                </a>
            </li>
        <% } %>
        <li class="pagination-number">Page <%= page.current + ' of ' + page.total %></li>
    </ul>
</div>