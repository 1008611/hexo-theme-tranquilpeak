<nav id="sidebar">
    <ul class="sidebar-profile">
        <li>
            <% if ((theme.gravatar_image) && (config.email)) { %>
                <img class="profile-picture" src="<%- gravatar(config.email, 90) %>"/>
            <% } else if (theme.author.picture) { %>
                <img class="profile-picture" src="<%- url_for(theme.image_dir + '/' + theme.author.picture) %>"/>
            <% } %>
            <span class="desc hide-m text-base"><%= config.author %></span>
        </li>
    </ul>
    <% for (var i in theme.sidebar) { %>
        <ul>
            <% for (var n in theme.sidebar[i]) { %>
                <li>
                    <a href="<%- url_for(theme.sidebar[i][n].url) %>">
                        <i class="fa fa-lg <%= 'fa-' + theme.sidebar[i][n].icon %>"></i>
                        <span class="desc hide-m text-large"><%- theme.sidebar[i][n].title %></span>
                    </a>
                </li>
            <% } %>
        </ul>
    <% } %>
</nav>