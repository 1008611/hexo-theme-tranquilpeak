<%
    var title = config.title + ' - ';

    if (is_home()) {
        title += 'home';
    }
    else if (is_archive()){
        title += 'archives';

        if (is_month()) {
            title += ' : ' + page.year + '/' + page.month;
        }
        else if (is_year()) {
            title += ' : ' + page.year;
        }
    }
    else if (is_tag()) {
        if (page.tag) {
            title += 'tag : ' + page.tag;
        }
        else {
            title += 'tags';
        }
    }
    else {
      title += page.title;
    }
%>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" >
    <meta name="viewport" content="width=932" >
    <meta name="MobileOptimized" content="932" >
    <meta name="generator" content="<%= config.title %>">
    <title><%= title %></title>
    <link rel="icon" href="<%- url_for(theme.image_dir + '/' + theme.favicon) %>">
    <link rel="stylesheet" type="text/css" href="<%- url_for('vendor/fontawesome/css/font-awesome.min.css') %>">
    <link rel="stylesheet" type="text/css" href="<%- url_for('css/style.min.css') %>">
    <link rel="alternative" type="application/atom+xml" title="RSS" href="<%= theme.rss %>">
</head>
