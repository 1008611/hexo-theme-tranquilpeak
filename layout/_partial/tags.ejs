<div id="tags-archive" class="archive">
    <form action="#" id="tags-search" class="archive-search">
        <input id="tag" type="text" class="form-control input--xlarge" value="" placeholder="Search a tag..." autofocus="autofocus">
    </form>
    <section id="tags-list">
        <% site.tags.sort('name').each(function(item){ %>
            <a class="tag tag--primary" href="<%= '#posts-list-' + item.name %>" data-tag="<%= item.name.replace('.','__') %>">
                <%= item.name %>
            </a>
        <% }); %>
    </section>
    <section id="posts-list" class="archive-list box-group">
        <% site.tags.sort('name').each(function(item){ %>
            <div id="<%= 'posts-list-' + item.name %>" class="box" data-tag="<%= item.name.replace('.','__') %>">
                <a href="<%= url_for('tags/' + item.name )%>">
                    <h2 class="archive-list-title"><%= item.name.toUpperCase() + ' (' + item.length + ')' %></h2>
                </a>
                <ul class="archive-list-content">
                    <% get_posts({'query':{'tags': item.name}}).each(function(post) { %>
                        <li>
                            <a class="link" href="<%= post.permalink %>"><%= post.title  %></a><span><%- ' - ' + post.date.format('DD/MM/YYYY').toLowerCase() %></span>
                        </li>
                    <% }) %>
                </ul>
            </div>
        <% }); %>
    </section>
</div>