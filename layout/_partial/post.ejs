<section class="post-wrap">
    <div class="post">
        <% if (post.link){ %>
            <h1 itemprop="name">
                <a class="link" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
            </h1>
        <% } else { %>
            <h1 class="post-title"><%= post.title %></h1>
        <% } %>
        <div class="post-info">
            <% if (post.date.isAfter(moment().subtract(7, 'days'))) { %>
                <%= post.date.fromNow() %>
            <% } else { %>
                <%= post.date.format('MMM DD, YYYY') %>
            <% } %>
            <% if (post.categories.length > 0) { %>
                <span>in </span>
                <%- partial('post/category', {categories: post.categories, style: 'link'})%>
            <% } %>
        </div>
        <div class="post-content markdown">
            <%- post.content %>
        </div>
        <% if (theme.image_gallery) { %>
            <%- partial('post/gallery', {photos: post.photos})%>
        <% } %>
    </div>
    <div class="post-footer">
        <%- partial('post/actions') %>
    </div>
    <% if (config.disqus_shortname) { %>
        <%- partial('post/disqus') %>
    <% } %>
    <div class="post-bottom-bar">
        <%- partial('post/actions') %>
    </div>
</section>

